<Window x:Class="PAB.ProductionKeyInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PAB - Praise And Bible" Height="100" Width="400">
    <StackPanel>
        <Label 
            HorizontalAlignment="Center"
            Content="정품키를 입력하시오"/>
        <StackPanel 
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBox Width="60" Text="{Binding FirstKey}"/>
            <Label Content="-"/>
            <TextBox Width="60" Text="{Binding SecondKey}"/>
            <Label Content="-"/>
            <TextBox Width="60" Text="{Binding ThirdKey}"/>
            <Label Content="-"/>
            <TextBox Width="60" Text="{Binding ForthKey}"/>
            <Button 
                Content="확인" 
                Margin="10 0 0 0"
                Click="CheckProductionKey"/>
        </StackPanel>
    </StackPanel>
</Window>
